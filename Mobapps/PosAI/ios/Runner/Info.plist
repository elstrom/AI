<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>PosAI</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>PosAI</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(FLUTTER_BUILD_NAME)</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleVersion</key>
	<string>$(FLUTTER_BUILD_NUMBER)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	
	<!-- ====== PERFORMANCE SETTINGS ====== -->
	<key>CADisableMinimumFrameDurationOnPhone</key>
	<true/>
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>
	
	<!-- ====== URL SCHEME (Receive data from ScanAI) ====== -->
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleURLName</key>
			<string>com.banwibu.posai</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>posai</string>
			</array>
		</dict>
	</array>
	
	<!-- Apps that PosAI can query/launch -->
	<key>LSApplicationQueriesSchemes</key>
	<array>
		<string>scanai</string>
	</array>
	
	<!-- ====== NETWORK ====== -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<true/>
		<key>NSAllowsLocalNetworking</key>
		<true/>
	</dict>
	<key>NSLocalNetworkUsageDescription</key>
	<string>PosAI membutuhkan akses jaringan lokal untuk terhubung ke server kasir dan ScanAI.</string>
	
	<!-- Bonjour Services: For local network service discovery -->
	<key>NSBonjourServices</key>
	<array>
		<string>_posai._tcp</string>
		<string>_scanai._tcp</string>
	</array>
	
	<!-- ====== PERMISSIONS ====== -->
	<key>NSCameraUsageDescription</key>
	<string>PosAI membutuhkan akses kamera untuk memindai QR Code pembayaran atau produk.</string>
	<key>NSMicrophoneUsageDescription</key>
	<string>PosAI membutuhkan akses mikrofon untuk fitur suara (jika ada).</string>
	<key>NSPhotoLibraryUsageDescription</key>
	<string>PosAI membutuhkan akses galeri untuk menyimpan struk atau produk.</string>
	<key>NSPhotoLibraryAddUsageDescription</key>
	<string>PosAI membutuhkan izin untuk menyimpan struk ke galeri foto.</string>
	
	<!-- ====== BACKGROUND EXECUTION ====== -->
	<!-- 
	     NOTE: iOS background execution is LIMITED compared to Android.
	     Only include modes you ACTUALLY USE, or App Store will reject!
	-->
	<key>UIBackgroundModes</key>
	<array>
		<!-- Background fetch: For WebSocket reconnection -->
		<string>fetch</string>
		<!-- Background processing: For pending transaction sync -->
		<string>processing</string>
	</array>
	
	<!-- ====== HARDWARE REQUIREMENTS ====== -->
	<!-- Only arm64 devices - required for modern iOS apps -->
	<key>UIRequiredDeviceCapabilities</key>
	<array>
		<string>arm64</string>
	</array>
	
	<!-- ====== APP STORE COMPLIANCE ====== -->
	<key>ITSAppUsesNonExemptEncryption</key>
	<false/>
	
	<!-- ====== UI CONFIGURATION ====== -->
	<key>UIRequiresFullScreen</key>
	<false/>
	<key>UIStatusBarHidden</key>
	<false/>
	<key>UIViewControllerBasedStatusBarAppearance</key>
	<true/>
</dict>
</plist>
